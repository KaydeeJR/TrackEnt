<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_margin="5dp"
        card_view:cardBackgroundColor="@color/color_background"
        card_view:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/movies_watchList_thumbnail"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@string/entertainment_image"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/movies_watchlist_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/movies_watchList_thumbnail"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="10dp"
                android:gravity="center"
                android:background="@color/color_background"
                android:textColor="@color/color_font"
                android:textSize="16sp" />

            <ImageButton
                android:id="@+id/three_dots_movies_watchlist_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="100dp"
                android:background="@color/color_transparent"
                android:contentDescription="@string/three_dots_menu"
                android:scaleType="fitXY"
                android:src="@drawable/ic_three_dot_menu" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>