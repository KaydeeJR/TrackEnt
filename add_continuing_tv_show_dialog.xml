<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/continuing_series_dialog_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            app:contentInsetStartWithNavigation="0dp"
            app:navigationIcon="@drawable/ic_close_white" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_background"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/enter_cont_series_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:autofillHints="@string/autofill_series_name"
                    android:focusable="true"
                    android:hint="@string/series_title"
                    android:imeOptions="actionNext"
                    android:inputType="textCapWords"
                    android:textColor="@color/color_font"
                    android:textColorHint="@color/color_font"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/season"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="0.5"
                        android:gravity="end"
                        android:text="@string/seasons_letter_s"
                        android:textColor="@color/color_font"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/enter_cont_season_number"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:autofillHints="@string/season_hint"
                        android:focusable="true"
                        android:gravity="center"
                        android:hint="@string/season_hint"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:textColor="@color/color_font"
                        android:textColorHint="@color/colorPrimary"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/episode"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="0.5"
                        android:gravity="end"
                        android:text="@string/episode_letter_e"
                        android:textColor="@color/color_font"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/enter_cont_episode_number"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:autofillHints="@string/episode_hint"
                        android:focusable="true"
                        android:gravity="center"
                        android:hint="@string/episode_hint"
                        android:imeOptions="actionDone"
                        android:inputType="number"
                        android:textColor="@color/color_font"
                        android:textColorHint="@color/colorPrimary"
                        android:textSize="16sp" />
                </LinearLayout>

                <DatePicker
                    android:id="@+id/series_release_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/color_background"
                    android:calendarTextColor="@color/color_font"
                    android:calendarViewShown="true"
                    android:datePickerMode="calendar"
                    android:firstDayOfWeek="1" />

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</layout>